---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Image from '~/components/common/Image.astro';

const PereiraTechTalksLogo = '~/assets/images/logos/per-tech-talks.png';
const PereiraTechTalksLogoDark = '~/assets/images/logos/per-tech-talks-dark.svg';

const metadata = {
  title:
    'Pereira Tech Talks — Comunidad de desarrolladores e investigadores inquietos y apasionados por compartir y aprender sobre diversos temas de desarrollo e innovación tecnológica.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero background="index-background dark:index-background-dark">
    <Fragment slot="title" class="text-center">
      <Image src={PereiraTechTalksLogo} alt="Pereira Tech Talks" width={400} class="mx-auto hidden dark:block" />
      <Image src={PereiraTechTalksLogoDark} alt="Pereira Tech Talks" width={400} class="mx-auto dark:hidden" />
    </Fragment>

    <Fragment slot="subtitle">
      Comunidad de desarrolladores e investigadores inquietos y apasionados por compartir y aprender sobre diversos
      temas de desarrollo e innovación tecnológica.
    </Fragment>
  </Hero>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts title="" information="" />
</Layout>
