---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Image from '~/components/common/Image.astro';
const PereiraTechTalksLogo = '~/assets/images/logos/PerTechTalksLargeWhite.png';

const metadata = {
  title:
    'Pereira Tech Talks — Comunidad de desarrolladores e investigadores inquietos y apasionados por compartir y aprender sobre diversos temas de desarrollo e innovación tecnológica.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title" class="text-center">
      <Image src={PereiraTechTalksLogo} alt="Pereira Tech Talks" width={400} class="mx-auto" />
    </Fragment>

    <Fragment slot="subtitle">
      Comunidad de desarrolladores e investigadores inquietos y apasionados por compartir y aprender sobre diversos
      temas de desarrollo e innovación tecnológica.
    </Fragment>
  </Hero>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts title="" information="" />
</Layout>
